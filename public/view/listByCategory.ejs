    </nav>

    <!-- 2. Search -->
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <br>

    
    <h1>List of <%= listTitle %> Items</h1>
    
    <!-- list of item -->
    <div class="container mt-3">
        <% items.forEach(function(item, index) { %>
            <% if (index % 3 === 0) { %>
                <!-- Start a new row -->
                <div class="row">
            <% } %>

            <!-- product box -->
            <div class="col-md-4">
                <div class="container mt-3 boxline">
                    <!-- picture -->
                    <div class="container mt-3 picbox"></div>
                    <div class="d-flex">
                        <div class="boxline">
                            <p><%= item.name %></p>
                        </div>
                        <div class="boxline">
                            <p><%= item.price %></p>
                            <button>add</button>
                        </div>
                    </div>
                    
                </div>
            </div>

            <% if ((index + 1) % 3 === 0 || (index + 1) === items.length) { %>
                <!-- End the row -->
                </div>
            <% } %>
        <% }); %>
    </div>


    
