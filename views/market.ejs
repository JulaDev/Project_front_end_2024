<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Market</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="css/style.css"/>
    <link rel="stylesheet" href="css/market.css"/>
    <link rel="stylesheet" href="css/categoryList.css"/>
</head>
<body>

<!--HOME _PAGE-->
    <!--NAV _BAR-->
    <nav class="homeTitle-min navColor nav-height" style="padding-top: 6px">
        <div class="container-fluid">
            <a class="homeTitle-mg navbar-brand navbarX hideNavText" href="/home">SEASON GREEN</a>
            <a class="homeTitle-mg navbar-brand navbarX hideNavText2 showText2" href="/home">MARKET</a>
        </div>
    </nav>

<div class="hideNavText2 showHiddenBar">
    <a class=" showHiddenBar" href="/home">CONTROL CENTER</a>
</div>

    <div class="row" style="position: relative; left: 12px">
        <div class="row " style="height: 80vh;">


            <div class="marketSideBar col-xl-3 col-md-4 col-12">

                <div class="hiddenText market-cat-lg market-cat-md market-cat market-sideTitle">
                    CATEGORIES
                </div>

                <div>

                    <% for(let i = 0 ; i < categoryList.length ; i ++){ %>


                        <form action="/arrange" method="post">
                            <button type="submit" class="category_box-lg category_box" style="text-align: center; text-transform: uppercase;">
                                <%= categoryList[i].category_name %>
                            </button>
                        </form>


                    <% } %>

                </div>

            </div>



            <div class=" col-xl-9 col-md-8 ">

                <div class="list-nav tp-margin mrg-l" >

                    <div style="display: flex">
                        <p class="hideAddItemBTN col-lg-10 col-md-9 col-sm-8 col-8" style="font-size: 2rem; font-weight: bold">ITEMS</p>

                        <form action="/addItem" method="get">
                            <button type="submit" class="pst-M hideAddItemBTN col-lg-1 col-md-4 col-sm-4 col-2" style="height: 40px; width: 120px; margin-top: 12px; background-color: #1a8c3b; color: white; border: none; font-weight: lighter;">ADD ITEM</button>
                        </form>
                    </div>

                <div style="height: 70vh;  overflow: scroll">

                <% for(let i = 0 ; i < data.length; i ++){ %>

                        <div class=" row outline list-box-lg list-box-md list-box-sm">
                            <p class=" col-lg-2 col-md-2 col-sm-2 col-2" style="text-align: left; padding-left: 12px">ID: <%= data[i].product_id %></p>

                            <div class=" col-lg-7 col-md-7 col-sm-7 col-7" style="display: flex" >
                                <div style="text-align: left; width: 50%"> <%= data[i].product_name %></div>
                                <div  style="text-align: right; width: 50%">$ <%= data[i].product_price %> </div>
                            </div>

                            <div class=" col-lg-2 col-md-2 col-sm-2 col-2">
                            <form action="/editItem" method="post">
                                <button type="submit" class="list-box-btn-lg" name="editItem" value="<%= data[i].product_id %>">EDIT</button>
                            </form>
                            </div>

                            <div class=" col-lg-1 col-md-1 col-sm-1 col-1">
                            <form action="/removeItem" method="post">
                                <button type="submit" class="list-box-Xbtn-lg list-box-Xbtn-md list-box-Xbtn-sm" name="removeItem" value="<%= data[i].product_id%>">X</button>
                            </form>
                            </div>

                        </div>

                <% } %>
                </div>
                    <form action="/addItem" method="get">
                        <button type="submit" class="hiddenBTN" style="height: 40px; width: 100%; margin-top: 12px; background-color: #1a8c3b; color: white; border: none; font-weight: lighter;">ADD ITEM</button>
                    </form>

            </div>
            </div>

        </div>


        <!--            CONTROL PANEL-->



    </div>

</body>
</html>
